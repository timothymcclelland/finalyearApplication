<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--   theme UI controls like floating button and Edit Text underline -->
        <item name="colorAccent">@color/colorAccent</item>
        <!--   Entire app background colour -->
        <item name="android:colorBackground">@color/background</item>
        <!--   Text for all TextViews, Buttons and EditTexts etc -->
        <item name="android:textColor">@color/allText</item>
        <!--   Text for all EditTextHints etc -->
        <item name="android:textColorHint">@color/hints</item>
        <!--   Button Background Color -->
        <item name="android:colorButtonNormal">@color/buttonBackground</item>
    </style>

    <!--   Style for TextViews displaying stringxml info -->
    <style name="stTextView" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!--   Style for TextViews returning Server info -->
    <style name="stTextViewReturn" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/allText</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!--   Style for Buttons -->
    <style name="stButtonViewReturn" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/buttonText</item>
    </style>

    <!--   Style for Edit Texts  -->
    <style name="stEditText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:background">@color/rowText</item>
        <item name="android:paddingBottom">45sp</item>
    </style>

    <!--   Style for Spinner in addition page  -->
    <style name="stSpinner" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@color/background</item>
    </style>

</resources>
